---
import { type CollectionEntry, getCollection } from "astro:content";
import BlogLayout from "@/layouts/BlogLayout.astro";
import FormattedDate from "@/components/FormattedDate.astro";
import { cn } from "@/lib/utils";
import { Separator } from "@/components/ui/separator";
import {
  Breadcrumb,
  BreadcrumbLink,
  BreadcrumbList,
  BreadcrumbSeparator,
  BreadcrumbItem,
  BreadcrumbPage,
} from "@/components/ui/breadcrumb";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { title, description, heroImage, pubDate, updatedDate } = post.data;
const { Content } = await post.render();
---

<!doctype html>
<BlogLayout title={title} description={description} image={heroImage}>
  <main
    class={cn(
      "min-h-screen antialiased max-w-2xl mx-auto py-12 sm:py-24 px-6",
      "flex flex-col min-h-[100dvh] space-y-10",
    )}
  >
    <Breadcrumb>
      <BreadcrumbList>
        <BreadcrumbItem>
          <BreadcrumbLink href="/">Home</BreadcrumbLink>
        </BreadcrumbItem>
        <BreadcrumbSeparator />
        <BreadcrumbItem>
          <BreadcrumbLink href="/blog">Blog</BreadcrumbLink>
        </BreadcrumbItem>
        <BreadcrumbSeparator />
        <BreadcrumbItem>
          <BreadcrumbPage>{title}</BreadcrumbPage>
        </BreadcrumbItem>
      </BreadcrumbList>
    </Breadcrumb>
    <article class="flex flex-col gap-6">
      <div>
        {
          heroImage && (
            <img
              width={1020}
              height={510}
              src={heroImage}
              class="w-full rounded-lg"
              alt=""
            />
          )
        }
      </div>
      <div class="title">
        <div class="date">
          <FormattedDate date={pubDate} />
        </div>
        <h1 class="text-4xl font-medium">{title}</h1>
      </div>
      <Separator className="mx-auto my-6 w-[50%]" />
      <div class="markdown-body">
        <Content />
      </div>
      <Separator className="mx-auto mt-6 w-[50%]" />
      {
        updatedDate && (
          <div class="text-center text-sm font-bold text-muted-foreground">
            Last updated on <FormattedDate date={updatedDate} />
          </div>
        )
      }
      <p class="text-center text-sm font-medium">Thanks for reading</p>
    </article>
  </main>
</BlogLayout>
